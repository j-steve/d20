extends ../layout

block content
	h2 Select a #{title}:
	div.row
		for ddclass in ddclasses
			div.col-sm-4.col-md-2
				div.thumbnail
					img(src=ddclass.image, alt="...", style="height:300px;")
					div.caption
					h3=ddclass.name
					p(style="height:200px;")=ddclass.description
					p
						a(href=nextPage + ddclass.name, role="button").btn.btn-primary="Choose " + ddclass.name